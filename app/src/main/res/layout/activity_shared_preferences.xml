<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background"
    tools:context=".Shared_perference">


    <EditText
        android:id="@+id/PrsonalDetails"
        android:layout_width="287dp"
        android:layout_height="56dp"
        android:layout_margin="14dp"
        android:layout_marginTop="28dp"
        android:text="פרטים אישיים"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/id"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_margin="14dp"
        android:layout_marginTop="40dp"
        android:hint="תעודת זהות"
        android:textColor="#03A9F4"
        android:textColorHint="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PrsonalDetails" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_margin="14dp"
        android:layout_marginTop="16dp"
        android:hint="שם"
        android:textColor="@android:color/holo_blue_bright"
        android:textColorHighlight="@android:color/holo_blue_bright"
        android:textColorHint="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id" />

    <EditText
        android:id="@+id/FirstName"
        android:layout_width="223dp"
        android:layout_height="59dp"
        android:layout_margin="14dp"
        android:layout_marginTop="16dp"
        android:hint="שם משפחה "
        android:textColor="@android:color/holo_blue_bright"
        android:textColorHighlight="#03A9F4"
        android:textColorHint="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name" />

    <EditText
        android:id="@+id/Health"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_margin="14dp"
        android:layout_marginTop="16dp"
        android:hint="קופת חולים"
        android:textColor="@android:color/holo_blue_bright"
        android:textColorHint="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirstName" />

    <EditText
        android:id="@+id/Gander"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_margin="14dp"
        android:layout_marginTop="16dp"
        android:hint="מין "
        android:textColor="@android:color/holo_blue_bright"
        android:textColorHighlight="@android:color/holo_blue_bright"
        android:textColorHint="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Health" />

    <EditText
        android:id="@+id/data"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_margin="14dp"
        android:layout_marginTop="16dp"
        android:hint="תאריך לידה"
        android:textColor="#03A9F4"
        android:textColorHint="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Gander" />

    <EditText
        android:id="@+id/PhoneNumber"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_margin="14dp"
        android:layout_marginTop="16dp"
        android:hint="טלפון"
        android:textColor="#03A9F4"
        android:textColorHint="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data" />

    <Button
        android:id="@+id/sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שלח"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.321"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PhoneNumber"
        app:layout_constraintVertical_bias="0.126" />

</androidx.constraintlayout.widget.ConstraintLayout>